<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_frame_white_top_20"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="15dp"
    android:paddingBottom="20dp"
    android:paddingHorizontal="20dp"
    android:elevation="7dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="44dp"
        android:layout_height="4dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/foodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="음식1"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_medium"
            android:layout_gravity="bottom"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/registrationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12시59분"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard"
            android:layout_gravity="bottom"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="* 잘못된 부분이 있으면 클릭해서 수정하실 수 있어요."
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="칼로리"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kcalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/editKcalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:inputType="number"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탄수화물"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/carbohydrateAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/EditCarbohydrateAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"
                android:inputType="number"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  - 당류"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sugarAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/EditSugarAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"
                android:inputType="number"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단백질"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/proteinAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/EditProteinAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"
                android:inputType="number"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지방"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/provinceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/EditProvinceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"
                android:inputType="number"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  - 포화지방"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/saturatedFatAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/EditSaturatedFatAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"
                android:inputType="number"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  - 불포화지방"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/unsaturatedFatAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/EditUnsaturatedFatAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"
                android:inputType="number"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  - 트랜스지방"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/transFatAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/EditTransFatAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"
                android:inputType="number"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나트륨"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard"
            android:layout_gravity="center"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sodiumAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"/>

            <EditText
                android:id="@+id/EditSodiumAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="432"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard"
                android:layout_gravity="center"
                android:inputType="number"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>