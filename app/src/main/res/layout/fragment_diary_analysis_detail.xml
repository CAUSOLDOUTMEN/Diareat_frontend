<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/ic_app"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="분석"
                android:layout_gravity="center"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/black"
                android:textSize="26sp"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주간 식습관 점수"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:fontFamily="@font/pretendard_semi_bold"
                android:textColor="@color/black"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="79.60"
                android:layout_gravity="center"
                android:textSize="45sp"
                android:fontFamily="@font/pretendard"
                android:textColor="@color/orange"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="칼로리"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/dark_gray"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/kcalScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.0"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/dark_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="탄수화물"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/dark_gray"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/carbohydrateScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.9"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/dark_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="단백질"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/dark_gray"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/proteinScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20.15"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/dark_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지방"
                android:textSize="22sp"
                android:layout_gravity="center"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/dark_gray"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/provinceScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.95"
                android:layout_gravity="center"
                android:textSize="22sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/dark_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번주의 "
                android:textSize="24sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best 3"
                android:textSize="24sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/blue"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bestRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이번주의 "
                android:textSize="24sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worst 3"
                android:textSize="24sp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/red"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/worstRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
